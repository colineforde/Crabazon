= form_for @product do |f|
  %fieldset.form-group
    = f.label :name
    = f.text_field :name, class: "form-control"
  %fieldset.form-group
    = f.label :price
    = f.number_field :price, class: "form-control"
  %fieldset.form-group
    = f.label :description
    = f.text_area :description, class: "form-control"
  %fieldset.form-group
    = f.label :image_url
    = f.text_area :image_url, class: "form-control"
  %fieldset.form-group
    = f.label :quantity
    = f.number_field :quantity, class: "form-control"
  = f.submit 'Save'
