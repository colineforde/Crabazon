%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .nav.navbar-nav.navbar-right
      = link_to 'Product List', admin_index_path, class: 'btn btn-default navbar-btn add-product'
.container
  .row
    .col-lg-12
      = form_for @category, html: { class: 'form-horizontal center', id: 'edit-form' } do |f|
        %h1.text-center.edit-header Add New Category
        .form-center
          - if flash[:error]
            #flash.error.text-center
              = flash[:error]
          .form-group
            = f.label :name, 'Category Name:', class: 'col-lg-4 control-label'
            .col-md-8
              = f.text_field :name, class: 'form-control'
          .col-md-12.update-button
            = f.submit 'Add New Category', class: 'btn btn-primary btn-lg center-block'